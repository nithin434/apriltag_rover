<?xml version="1.0"?>
<sdf version="1.6">
  <world name="docking_world">
    
    <!-- Physics -->
    <physics type="ode">
      <real_time_update_rate>1000.0</real_time_update_rate>
      <max_step_size>0.001</max_step_size>
    </physics>

    <!-- Lighting -->
    <include>
      <uri>model://sun</uri>
    </include>

    <!-- Ground -->
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- Charging Station (Green) -->
    <model name="charging_station">
      <static>true</static>
      <pose>0 0 0.01 0 0 0</pose>
      <link name="link">
        <visual name="visual">
          <geometry>
            <box><size>1 1 0.02</size></box>
          </geometry>
          <material>
            <ambient>0 1 0 1</ambient>
            <diffuse>0 1 0 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- AprilTag 0 - Charging Station -->
    <model name="tag_0">
      <static>true</static>
      <pose>0 1.5 0.1 0 0 0</pose>
      <link name="link">
        <visual name="white_background">
          <geometry>
            <box><size>0.3 0.3 0.001</size></box>
          </geometry>
          <material>
            <ambient>1 1 1 1</ambient>
            <diffuse>1 1 1 1</diffuse>
          </material>
        </visual>
        <visual name="black_pattern">
          <pose>0 0 0.001 0 0 0</pose>
          <geometry>
            <box><size>0.2 0.2 0.001</size></box>
          </geometry>
          <material>
            <ambient>0 0 0 1</ambient>
            <diffuse>0 0 0 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- AprilTag 1 - Path to Dock1 -->
    <model name="tag_1">
      <static>true</static>
      <pose>3 1.5 0.1 0 0 0</pose>
      <link name="link">
        <visual name="visual">
          <geometry>
            <box><size>0.3 0.3 0.001</size></box>
          </geometry>
          <material>
            <ambient>1 1 1 1</ambient>
            <diffuse>1 1 1 1</diffuse>
            <specular>0 0 0 1</specular>
            <emissive>0 0 0 1</emissive>
          </material>
        </visual>
        <visual name="apriltag_visual">
          <pose>0 0 0.001 0 0 0</pose>
          <geometry>
            <box><size>0.25 0.25 0.001</size></box>
          </geometry>
          <material>
            <ambient>0 0 0 1</ambient>
            <diffuse>0 0 0 1</diffuse>
          </material>
        </visual>
